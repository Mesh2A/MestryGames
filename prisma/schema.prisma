generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model GameProfile {
  id        String   @id @default(cuid())
  publicId  String?  @unique
  email     String   @unique
  contactEmail String? @unique
  username  String?  @unique
  passwordHash String?
  state     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  purchases Purchase[]
  friendshipsA Friendship[] @relation("FriendshipA")
  friendshipsB Friendship[] @relation("FriendshipB")
  friendRequestsSent FriendRequest[] @relation("FriendRequestFrom")
  friendRequestsReceived FriendRequest[] @relation("FriendRequestTo")
  friendRequestEventsSent FriendRequestEvent[] @relation("FriendRequestEventFrom")
  friendRequestEventsReceived FriendRequestEvent[] @relation("FriendRequestEventTo")
  giftsSent FriendGift[] @relation("GiftFrom")
  giftsReceived FriendGift[] @relation("GiftTo")
  giftEventsSent FriendGiftEvent[] @relation("GiftEventFrom")
  giftEventsReceived FriendGiftEvent[] @relation("GiftEventTo")
}

model Purchase {
  id             String   @id @default(cuid())
  profileEmail   String
  stripeSessionId String  @unique
  packId         String
  coins          Int
  currency       String
  unitAmount     Int
  status         String
  createdAt      DateTime @default(now())

  profile GameProfile @relation(fields: [profileEmail], references: [email], onDelete: Cascade)

  @@index([profileEmail, createdAt])
}

model Friendship {
  id        String   @id @default(cuid())
  aEmail    String
  bEmail    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  a GameProfile @relation("FriendshipA", fields: [aEmail], references: [email], onDelete: Cascade)
  b GameProfile @relation("FriendshipB", fields: [bEmail], references: [email], onDelete: Cascade)

  @@unique([aEmail, bEmail])
  @@index([aEmail, updatedAt])
  @@index([bEmail, updatedAt])
}

model FriendRequest {
  id        String   @id @default(cuid())
  fromEmail String
  toEmail   String
  createdAt DateTime @default(now())

  from GameProfile @relation("FriendRequestFrom", fields: [fromEmail], references: [email], onDelete: Cascade)
  to   GameProfile @relation("FriendRequestTo", fields: [toEmail], references: [email], onDelete: Cascade)

  @@unique([fromEmail, toEmail])
  @@index([toEmail, createdAt])
  @@index([fromEmail, createdAt])
}

model FriendRequestEvent {
  id        String   @id @default(cuid())
  fromEmail String
  toEmail   String
  action    String
  createdAt DateTime @default(now())

  from GameProfile @relation("FriendRequestEventFrom", fields: [fromEmail], references: [email], onDelete: Cascade)
  to   GameProfile @relation("FriendRequestEventTo", fields: [toEmail], references: [email], onDelete: Cascade)

  @@index([toEmail, createdAt])
  @@index([fromEmail, createdAt])
}

model FriendGift {
  id         String   @id @default(cuid())
  fromEmail  String
  toEmail    String
  lastGiftAt DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  from GameProfile @relation("GiftFrom", fields: [fromEmail], references: [email], onDelete: Cascade)
  to   GameProfile @relation("GiftTo", fields: [toEmail], references: [email], onDelete: Cascade)

  @@unique([fromEmail, toEmail])
  @@index([toEmail, updatedAt])
  @@index([fromEmail, updatedAt])
}

model FriendGiftEvent {
  id        String   @id @default(cuid())
  fromEmail String
  toEmail   String
  coins     Int
  createdAt DateTime @default(now())

  from GameProfile @relation("GiftEventFrom", fields: [fromEmail], references: [email], onDelete: Cascade)
  to   GameProfile @relation("GiftEventTo", fields: [toEmail], references: [email], onDelete: Cascade)

  @@index([toEmail, createdAt])
  @@index([fromEmail, createdAt])
}
